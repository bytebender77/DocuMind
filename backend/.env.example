# Database Configuration
# Option 1: Local PostgreSQL
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saas_db

# Option 2: Supabase (Direct Connection - for migrations)
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Option 3: Supabase (Connection Pooling - for application)
# DATABASE_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Example Supabase connection string (replace with your actual values):
DATABASE_URL=postgresql://postgres:your_password@db.your_project_ref.supabase.co:5432/postgres

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=development
DEBUG=True

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=rag-chatbots

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
